{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2015",
		"moduleResolution": "node",
		"outDir": "build",

		"declaration": true,
		"sourceMap": false,
		"removeComments": true,
		"noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"lib": ["dom", "es2017"],
		"skipLibCheck": true
	},
	"include": [
		"src"
	]
}
