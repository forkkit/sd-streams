{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2017",
		"moduleResolution": "node",

		"noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,

		"lib": ["dom", "es6", "es2015", "es2016", "es2017", "esnext"],
	}
}
